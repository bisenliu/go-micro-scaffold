# 系统配置
system:
  # 运行环境 (development/production/test)
  env: "development"
  # 服务端口
  port: "8080"
  # 系统密钥，用于JWT签名等安全操作
  secret_key: "your_secret_key_here"
  # 服务名称
  server_name: "services"

# Token配置
token:
  # Token过期时间(分钟)
  expired_time: 30 # 分钟

# 雪花算法配置(用于生成唯一ID)
snow_flake:
  # 起始时间(格式: YYYY-MM-DD)
  start_time: "2024-01-01"
  # 机器ID(0-1023)
  machine_id: 1

# 主数据库配置
database:
  # 数据库类型(mysql/postgres/sqlite)
  type: "mysql"
  # 数据库主机地址
  host: "127.0.0.1"
  # 数据库端口
  port: 3306
  # 数据库名称
  database: go-micro-scaffold
  # 数据库用户名
  username: "your_database_username"
  # 数据库密码
  password: "your_database_password"
  # 字符集
  charset: utf8mb4
  # 最大打开连接数
  max_open_conns: 100
  # 最大空闲连接数
  max_idle_conns: 10
  # 连接最大生命周期
  conn_max_lifetime: 1h
  # 连接最大空闲时间
  conn_max_idle_time: 30m
  # 日志级别
  log_level: 1

# 多数据源配置
databases:
  # 主数据库 - 用户数据、核心业务数据
  primary:
    type: "mysql"
    host: "127.0.0.1"
    port: 3306
    database: "go-micro-scaffold"
    username: "root"
    password: ""
    charset: "utf8mb4"
    # 解析时间
    parse_time: true
    # 时区
    loc: "Local"
    max_idle_conns: 10
    max_open_conns: 100
    conn_max_lifetime: 3600
    
  # 分析数据库 - 统计分析、报表数据
  analytics:
    type: "mysql"
    host: "127.0.0.1"
    port: 3306
    database: "go-micro-scaffold"
    username: "root"
    password: ""
    charset: "utf8mb4"
    parse_time: true
    loc: "Local"
    max_idle_conns: 5
    max_open_conns: 50
    conn_max_lifetime: 3600

# Redis配置
redis:
  # Redis键前缀
  prefix: "cloud_motion"
  # Redis主机地址
  host: "127.0.0.1"
  # Redis端口
  port: 6379
  # Redis密码(如果未设置密码则留空)
  password: "your_redis_password"
  # Redis数据库编号
  database: 0
  # 默认数据库编号
  default_db: 0
  # 连接池大小
  pool_size: 10

# 服务器配置
server:
  # 服务端口
  port: "8080"
  # 运行模式(debug/release/test)
  mode: debug

# Zap日志配置
zap:
  # 日志级别(DEBUG/INFO/WARN/ERROR/DPANIC/PANIC/FATAL)
  level: "DEBUG"
  # 日志文件目录
  director: "./logs"
  # 日志文件最大保留天数
  max_age: 30
  # 单个日志文件最大大小(MB)
  max_size: 500
  # 最大备份文件数量
  max_backups: 7

# 微信配置
wechat:
  # 微信小程序AppID
  app_id_mini: "your_wechat_app_id_mini"
  # 微信小程序Secret
  secret_mini: "your_wechat_secret_mini"
  # 微信服务号AppID
  app_id_serve: "your_wechat_app_id_serve"
  # 微信服务号Secret
  secret_serve: "your_wechat_secret_serve"
  # 团队状态通知模板ID
  team_status_message_id: "your_team_status_message_id"
  # 支付通知模板ID
  payment_notice_message_id: "your_payment_notice_message_id"
  # 商户ID
  merch_id: "your_merch_id"
  # 支付回调URL
  payment_notify_url: "your_payment_notify_url"
  # 退款回调URL
  refund_notify_url: "your_refund_notify_url"
  # 获取OpenID的URL
  get_openid_url: "https://api.weixin.qq.com/sns/jscode2session"
  # 获取Access Token的URL
  get_access_token_url: "https://api.weixin.qq.com/cgi-bin/token"
  # 获取手机号的URL
  get_phone_number_url: "https://api.weixin.qq.com/wxa/business/getuserphonenumber"
  # 发送模板消息的URL
  send_template_message_url: "https://api.weixin.qq.com/cgi-bin/message/subscribe/send"

# 阿里云短信服务配置
aliyun_sms:
  # AccessKey ID
  access_key_id: "your_aliyun_access_key_id"
  # AccessKey Secret
  access_key_secret: "your_aliyun_access_key_secret"
  # 地域ID
  region_id: "cn-hangzhou"
  # 服务端点
  endpoint: "dysmsapi.aliyuncs.com"
  # 短信签名
  sign_name: "your_sign_name"
  # 团队通知短信模板码
  team_notice_code: "your_team_notice_code"
  # 支付通知短信模板码
  payment_notice_code: "your_payment_notice_code"

# 验证配置
validation:
  # 本地化设置(zh/en等)
  locale: "zh"